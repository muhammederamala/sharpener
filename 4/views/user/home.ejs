<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css"> <!-- Link to your CSS file -->

    <title>
        Expense Tracker
    </title>
</head>

<body>
    <div class="container mt-5 align-items-start">
        <h1 class="mb-4">Expense Tracker</h1>
        <form id="expense-form" action="/add-expense" method="POST">
            <input class="form-control mb-4" type='text' name="amount" placeholder="amount" id="amount" required>
            <input class="form-control mb-4" type='text' name="description" placeholder="Description" id="description" required>
            <select class="form-control mb-4" id="category" name="category" id="category" required>
                <option value="Groceries">Groceries</option>
                <option value="Transportation">Transportation</option>
                <option value="Utilities">Utilities</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Other">Other</option>
            </select>
            <button type="submit" class="btn btn-success mb-4" id="add-expense">
                Add
            </button>
        </form>
    </div>
    <h2>User List</h2>
    <div>  
      <ul id="userList">
        <% expenses.forEach(expense => { %>
          <div class="user-list-container">
          <li>Amount: <%= expense.amount %></li>
          <li>Description: <%= expense.description %></li>
          <li>Category: <%= expense.category %></li>
          <a href="/edit-expense/<%= expense.id %>" class="edit-button">
            <button>
              Edit
            </button>
          </a>
          <form action="/delete-expense" method="POST">
            <input type="hidden" value="<%= expense.id %>" name="id">
            <button type="submit">Delete</button>
          </form>
        </div>
        <% }); %>
      </ul>  
    </div>
</body>
</html>
